.page, .item {
    height: 100%;
    display: flex;
    align-items: center; // 垂直居中
    justify-content: center;
    // text-align: center;
    // border: 1px solid black;
}

.page {
    width: 10%;
    color: white;
    font-size: 1.5vw;
    margin-left: 3%;
}

.item {
    width: 15%;
    flex-direction: column;
    font-size: 1.25vw;
}

.selectedPage, .selectedItem {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.selectedPage {
    width: 10%;
    font-size: 1.5vw;
    // font-weight: bold;
    color: rgba(250 250 250 0.5);
    margin-left: 3%;
}

.selectedItem {
    width: 15%;
    flex-direction: column;
    font-size: 1.4vw;
    font-weight: bold;
    color: rgba(0 0 0 0.9);
}

.page:hover {
    // background-color: rgba(260 260 260 0.9);

.ivu-table-wrapper.default {
    border: 1px solid #455b7d;
    border-bottom: 0;
    border-right: 0;
    /* background: none!important; */
}

.default .ivu-table-border {
    background: rgba(256 256 256 0.7);
    color: inherit;
}

// 表头样式
.default .ivu-table-header tr {
    // box-shadow: inset 0px 0px 12px 1px rgb(0 0 0);
    background: rgba(20 20 20 0.5);
}

.default .ivu-table-border td, .default .ivu-table-border th {
    border-color: rgba(256 256 256 0.1);
    background: none;
    // color: inherit;
}

.default .ivu-table-row-hover {
    background: rgba(256 256 256 0.4);
}


// 展示信息面板
.showBoard {
    width: 86%;
    // height: 1100px;
    background: rgba(256 256 256 0.6) center;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    // justify-content: center;
    align-items: center;
    // margin-top: 4%;
    margin-bottom: 5%;
    // overflow: auto;
}

// 面板头选择与展示信息栏
.showHeader {
    width: 100%;
    height: 120px;
    display: flex;
    justify-content: center;
}

// 面板头选择区域
.selectArea {
    width: 18%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

// 刷新按钮
.refreshButton {
    width: 75%;
    margin-top: 5%;
}

// 简介信息
.introduction {
    width: 64%;
    height: 100px;
    background: rgba(256 256 256 0.9) center;
    border-radius: 5px;
    display: flex;
    font-size: 1.1vw;
}

// 搜索栏
.search {
    width: 18%;
    height: 100%;
    // margin-left: 16%;
    // padding: 20px;
    // border: 1px solid red;
    display: flex;
    justify-content: flex-end;
    /* flex-direction: row; */
}

// 表格板
.all {
    display: flex;
    flex-direction: column;
    // justify-content: center;
    align-items: center;
    width: 100%;
    // height: 800px;
    margin-top: 3.5%;

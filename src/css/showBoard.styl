}

// 表格名称
.tableHeader {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 13%;
    height: 6%;
    background-color: rgba(256 256 256 0.9);
    border-radius: 5px;
    font-size: 1.5vw;
    font-weight: bold;
}

// 表格主体
.tableBody {
    width: 90%;
    padding-bottom: 3%;
}

